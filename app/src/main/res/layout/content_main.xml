<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/chooseText"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_shape"
        android:text="选择字体"
        android:textSize="20dp"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:gravity="center"
        android:layout_below="@+id/onlineTranslation"
        android:layout_alignLeft="@+id/onlineTranslation"
        android:layout_alignStart="@+id/onlineTranslation"
        android:layout_alignBottom="@+id/content"
        android:layout_alignRight="@+id/gridView"
        android:layout_alignEnd="@+id/gridView" />

    <EditText
        android:id="@+id/content"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="输入内容"
        android:background="@drawable/bt_shape"
        android:textColor="@android:color/tertiary_text_light"
        android:textSize="20dp"
        android:gravity="top"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/onlineTranslation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在线生成"
        android:background="@drawable/bt_shape"
        android:textSize="20dp"
        android:layout_alignTop="@+id/content"
        android:layout_toRightOf="@+id/content"
        android:layout_alignRight="@+id/gridView"
        android:layout_alignEnd="@+id/gridView" />


    <ListView
        android:padding="2dp"
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape"
        android:verticalSpacing="3px"
        android:horizontalSpacing="3px"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/content"></ListView>



</RelativeLayout>
